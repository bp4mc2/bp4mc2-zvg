@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix skos: <http://www.w3.org/2004/02/skos/core#>.
@prefix skosthes: <http://purl.org/iso25964/skos-thes#>.
@prefix skoslex: <http://bp4mc2.org/def/skos-lex#>.
@prefix owl: <http://www.w3.org/2002/07/owl#>.
@prefix zv: <http://taxonomie.zorgeloosvastgoed.nl/id/begrip/>.
@prefix nvm: <http://nvm.zorgeloosvastgoed.nl/id/begrip/>.
@prefix hdn: <http://www.hdn.taxonomie.zorgeloosvastgoed.nl/id/begrip/>.
@prefix ech: <http://ech.zorgeloosvastgoed.nl/id/begrip/>.
@prefix not: <http://not.zorgeloosvastgoed.nl/id/begrip/>.
@prefix kad: <http://kad.zorgeloosvastgoed.nl/id/begrip/>.
@prefix bel: <http://bel.zorgeloosvastgoed.nl/id/begrip/>.
@prefix person: <http://www.w3.org/ns/person#>.
@prefix org: <http://www.w3.org/ns/org#>.
@prefix loc: <http://www.w3.org/ns/locn#>.

<http://zorgeloosvastgoed.nl/data/hdn> a owl:Ontology;
	rdfs:label "Domein Hypotheken";
.

#---
#Begrippen die essentieel zijn voor de activiteiten het hypotheekdomein, maar die in andere domeinen worden gedefinieerd.
#---

hdn:Persoon a skos:Concept, skoslex:Actor;
	skos:exactMatch zv:Persoon;
	rdfs:label "Persoon"@nl;
.
hdn:Hypotheekgever a skos:Concept, skoslex:Actor;
	skos:exactMatch not:Hypotheekgever;
	rdfs:label "Hypotheekgever"@nl;
.
hdn:Hypotheeknemer a skos:Concept, skoslex:Actor;
	skos:exactMatch not:Hypotheeknemer;
	rdfs:label "Hypotheeknemer"@nl;
.
hdn:Koopovereenkomst a skos:Concept, skoslex:Object;
	skos:exactMatch nvm:Koopovereenkomst;
	rdfs:label "Koopovereenkomst"@nl;
.

#---
#HDN is de spin in het web van hypotheken. Daarom worden deze begrippen in het hdn domein gedefinieerd.
#---

hdn:Hypotheekadviseur a skos:Concept, skoslex:Agent;
	rdfs:label "Hypotheekadviseur"@nl;
	skos:prefLabel "Hypotheekadviseur";
	skos:altLabel "Financieel adviseur";
	skos:altLabel "Tussenpersoon"
.
hdn:Hypotheekadvies a skos:Concept, skoslex:Object;
	rdfs:label "Hypotheekadvies"@nl;
	skos:prefLabel "Hypotheekadvies"
.
hdn:OpstellenHypotheekadvies a skos:Concept, skoslex:Act;
	rdfs:label "Opstellen hypotheekadvies"@nl;
	skos:prefLabel "Opstellen hypotheekadvies";
	skoslex:agent hdn:Hypotheekadviseur;
	skoslex:actor hdn:Hypotheekgever;
	skoslex:object hdn:Hypotheekadvies;
	skoslex:object hdn:Koopovereenkomst
.
hdn:IdentificatieHypotheekadvies a skos:Concept, skoslex:Act;
	rdfs:label "Identificatie hypotheekadvies"@nl;
	skos:prefLabel "Identificatie hypotheekadvies";
	skosthes:broaderPartitive hdn:OpstellenHypotheekadvies;
	skoslex:object hdn:Persoon;
.
hdn:BindendeOfferte a skos:Concept, skoslex:Object;
	rdfs:label "Bindende offerte"@nl;
	skos:prefLabel "Bindende offerte";
	skos:semanticRelation hdn:Hypotheekadvies;
.
hdn:OpstellenBindendeOfferte a skos:Concept, skoslex:Act;
	rdfs:label "Opstellen bindende offerte"@nl;
	skos:prefLabel "Opstellen bindende offerte";
	skoslex:actor hdn:Hypotheeknemer;
	skoslex:actor hdn:Hypotheekgever;
	skoslex:object hdn:BindendeOfferte;
	skoslex:object hdn:Hypotheekadvies;
	skoslex:object hdn:Koopovereenkomst;
.
