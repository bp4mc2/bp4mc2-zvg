@prefix elmo: <http://dotwebstack.org/def/elmo#> .
@prefix config: <http://dotwebstack.org/configuration/>.

GRAPH config:Theatre {

  config:ResourceData a elmo:InformationProduct;
    elmo:backend config:DefaultBackend;
    elmo:requiredParameter elmo:SubjectParameter;
    elmo:query """
      PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
      PREFIX skos: <http://www.w3.org/2004/02/skos/core#>
      PREFIX skoslex: <http://bp4mc2.org/def/skos-lex#>
      PREFIX skosthes: <http://purl.org/iso25964/skos-thes#>
      PREFIX dcat: <http://www.w3.org/ns/dcat#>
      PREFIX dcterms: <http://purl.org/dc/terms/>
      prefix elmo1: <http://bp4mc2.org/elmo/def#>
      prefix html: <http://www.w3.org/1999/xhtml/vocab#>
      CONSTRUCT {
        ?subject ?p ?o.
        ?s ?ps ?subject.
        ?subject rdfs:label ?subjectlabel.
        ?o rdfs:label ?olabel.
        ?s rdfs:label ?slabel.
        ?subject elmo1:style ?g.
        ?subject html:img ?subjectimg.
        ?o html:img ?oimg.
        ?s html:img ?simg.
        ?s elmo1:style ?gs.
        ?o elmo1:style ?go.
        skos:Concept rdfs:label "Begrip"@nl.
        skoslex:Act rdfs:label "Handeling"@nl.
        skoslex:Actor rdfs:label "Actor"@nl.
        skoslex:Object rdfs:label "Object"@nl.
        skoslex:Agent rdfs:label "Agent"@nl.
        skoslex:Record rdfs:label "Record"@nl.
        skoslex:isAbout rdfs:label "gaat over"@nl.
        skoslex:record rdfs:label "vastgelegd in"@nl.
        dcat:Dataset rdfs:label "Dataset"@nl.
        skosthes:broaderGeneric rdfs:label "specialisatie van"@nl.
        skosthes:narrowerGeneric rdfs:label "generalisatie van"@nl.
        skosthes:broaderPartitive rdfs:label "onderdeel van"@nl.
        skosthes:narrowerPartitive rdfs:label "bestaat uit"@nl.
        skos:semanticRelation rdfs:label "gerelateerd aan"@nl.
        rdfs:seeAlso rdfs:label "zie ook"@nl.
        <http://zorgeloosvastgoed.nl/data/kad> elmo1:name "Kadaster".
        <http://zorgeloosvastgoed.nl/data/fin> elmo1:name "HDN".
        <http://zorgeloosvastgoed.nl/data/bel> elmo1:name "HDN".
        <http://zorgeloosvastgoed.nl/data/not> elmo1:name "KNB".
        <http://zorgeloosvastgoed.nl/data/mak> elmo1:name "NVM".
        <http://zorgeloosvastgoed.nl/data/zv> elmo1:name "Zorgeloosvastgoed".
      }
      WHERE {
        {
          GRAPH ?g {
            {
              select ?g ?subject ?subjectlabel ?stype (if(bound(?lextype),concat("/assets/images/",lcase(strafter(str(?lextype),"#")),".png"),?lextype) as ?subjectimg)
              where {
                ?subject a ?stype.
                OPTIONAL {?subject rdfs:label ?subjectlabel}
                OPTIONAL {
                  ?subject a ?lextype
                  FILTER (?lextype = skoslex:Actor || ?lextype = skoslex:Agent || ?lextype = skoslex:Object || ?lextype = skoslex:Act || ?lextype = skoslex:Record)
                }
              }
            }
          }
        }
        UNION
        {
          GRAPH ?g {
            ?subject ?p ?o.
            FILTER (?p != dcterms:source && ?p != foaf:isPrimaryTopicOf)
          }
          GRAPH ?go {
            SELECT ?go ?o ?otype ?olabel (if(bound(?olextype),concat("/assets/images/",lcase(strafter(str(?olextype),"#")),".png"),?olextype) as ?oimg)
            WHERE {
              OPTIONAL {?o rdfs:label ?olabel}
              OPTIONAL {
                ?o a ?olextype
                FILTER (?olextype = skoslex:Actor || ?olextype = skoslex:Agent || ?olextype = skoslex:Object || ?olextype = skoslex:Act || ?olextype = skoslex:Record)
              }
            }
          }
        }
        UNION
        {
          GRAPH ?gs {
            SELECT ?gs ?s ?ps ?subject ?stype ?slabel (if(bound(?slextype),concat("/assets/images/",lcase(strafter(str(?slextype),"#")),".png"),?slextype) as ?simg)
            WHERE {
              ?s ?ps ?subject.
              ?s a ?stype.
              OPTIONAL {?s rdfs:label ?slabel}
              OPTIONAL {
                ?s a ?slextype
                FILTER (?slextype = skoslex:Actor || ?slextype = skoslex:Agent || ?slextype = skoslex:Object || ?slextype = skoslex:Act || ?slextype = skoslex:Record)
              }
            }
          }
        }
      }
    """
  .

  config:DatasetsData a elmo:InformationProduct;
    elmo:backend config:DefaultBackend;
    elmo:requiredParameter elmo:SubjectParameter;
    elmo:query """
      PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
      PREFIX dcterms: <http://purl.org/dc/terms/>
      SELECT ?dataset ?dataset_label
      WHERE {
        GRAPH ?g {
          ?dataset dcterms:subject ?subject
          OPTIONAL {?dataset rdfs:label ?dataset_label}
        }
      }
    """
  .

}
